<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.erik.magin8ball.contact">


    <EditText
        android:id="@+id/email"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:layout_below="@+id/contact_name"
        android:layout_alignLeft="@+id/Subject"
        android:layout_alignStart="@+id/Subject" />

    <EditText
        android:id="@+id/contact_name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/gohome_button"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:id="@+id/Subject"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Subject"
        android:layout_below="@+id/email"
        android:layout_toRightOf="@+id/gohome_button"
        android:layout_toEndOf="@+id/gohome_button" />

    <EditText
        android:id="@+id/message"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Message"
        android:layout_below="@+id/Subject"
        android:layout_alignLeft="@+id/Subject"
        android:layout_alignStart="@+id/Subject" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2faccf"
        android:textColor="#ffffff"
        android:text="Send"
        android:elevation="4dp"
        android:layout_below="@+id/message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <Button
        android:id="@+id/gohome_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2faccf"
        android:textColor="#ffffff"
        android:text="Go Back"
        android:elevation="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>


